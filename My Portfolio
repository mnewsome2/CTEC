  <script>
    async function sendMessage() {
      const input = document.getElementById("userInput");
      const userText = input.value.trim();
      if (!userText) return;
      appendMessage("You", userText);
      const reply = await getBotReply(userText);
      appendMessage("Bot", reply);
      input.value = "";
    }

    function appendMessage(sender, text) {
      const chatlog = document.getElementById("chatlog");
      const message = document.createElement("p");
      message.innerHTML = `<strong>${sender}:</strong> ${text}`;
      chatlog.appendChild(message);
      chatlog.scrollTop = chatlog.scrollHeight;
    }

    function toggleChatbot() {
      const chatbot = document.getElementById("chatbotWidget");
      chatbot.style.display = chatbot.style.display === "none" ? "block" : "none";
    }

        async function getBotReply(message) {
        const lower = message.toLowerCase();

        if (lower.includes("hello")) {
          return "Hi there! How can I help you today?";
        }

        if (lower.includes("skills")) {
          return "Mikkia is skilled in network architecture, encryption, and hybrid cloud environments.";
        }

        if (
          lower.includes("skill") ||
          lower.includes("level") ||
          lower.includes("talent") ||
          lower.includes("specialty")
        ) {
          return "Some of Mikkia's featured skills are:\n" +
            "Research and Trend Analysis\n" +
            "Risk Management Framework\n" +
            "Enterprise Security Solutions Architecture\n" +
            "STIG Implementation\n" +
            "Agile Methodologies\n" +
            "Documentation Development & Management\n" +
            "Machine Learning (ML) and Large Language Model (LLM) Development\n" +
            "Would you like to know about more skills?";
        }

        if (lower.includes("more skills") || lower.includes("yes")) {
          return "Here are more of Mikkia's skills:\n" +
            "DataOps, DevSecOps, and MLOps\n" +
            "CIS and NIST Frameworks\n" +
            "Zero Trust & Least Privilege Model Design\n" +
            "Identity and Access Management (IAM)\n" +
            "System Hardening\n" +
            "Threat Detection & Incident Response\n" +
            "Encryption & Cryptographic Protocols\n" +
            "Firewall & IDS/IPS Configuration\n" +
            "Scripting & Automation";
        }

        if (lower.includes("experience")) {
          return "Mikkia has over 20 years of experience supporting federal missions at DISA and NASA.";
        }

        if (lower.includes("projects")) {
          return "Projects include DISA network hardening and AI threat detection for NASA.";
        }

        return "Try asking about my background, skills, or projects!";
      }

		userInput.addEventListener("keydown", function(e) {
  			if (e.key === "Enter" && !e.shiftKey) {
    			e.preventDefault(); // Prevents newline if textarea
    			sendMessage();
  				}
        });
    document.getElementById('contactForm').addEventListener('submit', function(event) {
      event.preventDefault();
      document.getElementById('formMessage').textContent = "Thanks for reaching out! I'll reply soon.";
      this.reset();
    });
  </script>
